#### SXHKD hotkeys ####

# Reload config
super + ctrl + Escape
  pkill -USR1 -x sxhkd

# Brightness controls
XF86MonBrightnessDown
  xbacklight -dec 10
XF86MonBrightnessUp
  xbacklight -inc 10

# Audio controls
XF86AudioLowerVolume
  ~/.config/bspwm/volume down
XF86AudioRaiseVolume
  ~/.config/bspwm/volume up
XF86AudioMute
  ~/.config/bspwm/volume mute

# Screenshot of the selected area
@super + shift + i
  ~/.config/bspwm/screenshot area

# Screenshot of a window
@super + shift + w
 ~/.config/bspwm/screenshot window

# Color picker
@super + shift + p
  ~/.config/bspwm/screenshot color

# Umlauts
super + a
  ~/.config/bspwm/key "a" "ä"

super + shift + a
  ~/.config/bspwm/key "a" "Ä"

super + o
  ~/.config/bspwm/key "o" "ö"

super + shift + o
  ~/.config/bspwm/key "o" "Ö"

super + u
  ~/.config/bspwm/key "u" "ü"

super + shift + u
  ~/.config/bspwm/key "u" "Ü"

super + s
  ~/.config/bspwm/key "s" "ß"

# Terminal emulator
super + Return
  urxvt256c

# Program launcher
super + space
  ~/.config/bspwm/launcher default

# Clipmenu launcher
ctrl + space
  ~/.config/bspwm/launcher clipmenu

# Gopass launcher
alt + space
  ~/.config/bspwm/launcher gopass

# Lock
super + l
  ~/.config/bspwm/lock

# Suspend
super + shift + s
  systemctl suspend


#### BSPWM hotkeys ####
# Focus or send to scratchpad
super + Escape
  ~/.config/bspwm/scratchpad

# Send to scratchpad
super + shift + Escape
  bspc node -d '^6'

# Notes
super + n
  ~/.config/bspwm/notes

# Dynamic mpv
super + p
  ~/.config/bspwm/mpv/dynamic-mpv

# Hide mpv
super + h
  bspc node $(xdotool search --class mpv || echo "false") -g hidden

# Rotate nodes
super + Tab
  bspc node @/ -R 90

# Quit bspwm normally
super + alt + Escape
  bspc quit

# Close
super + w
  bspc node -c

# Alternate between the tiled and monocle layout
super + m
  bspc desktop -l next

# If the current node is automatic, send it to the last manual, otherwise pull the last leaf
super + y
  bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

### Three finger swipe (left or right) to change desktop
super + alt + {Left,Right}
  bspc desktop -f {prev,next}

# Set the window state
super + {t,f,shift + f}
  bspc node -t {tiled,floating,fullscreen}

# Set the node flags
super + ctrl + {x,y,z}
  bspc node -g {locked,sticky,private}

# Focus the node in the given direction
super + {_,shift + }{h,j,k,l}
  bspc node -{f,s} {west,south,north,east}

# Focus the node for the given path jump
super + {p,b,comma,period}
  bspc node -f @{parent,brother,first,second}

# Focus the next/previous node
super + {_,shift + }c
  bspc node -f {next.local,prev.local}

# Focus the next/previous desktop
super + bracket{left,right}
  bspc desktop -f {prev,next}

# Focus the older or newer node in the focus history
super + {o,i}
  bspc wm -h off; \
  bspc node {older,newer} -f; \
  bspc wm -h on

# Focus or send to the given desktop
super + {_,shift + }{1-9,0}
  bspc {desktop -f,node -d} '^{1-9,10}'

# Preselect the direction
super + ctrl + {h,j,k,l}
  bspc node -p {west,south,north,east}

# Preselect the ratio
super + ctrl + {1-9}
  bspc node -o 0.{1-9}

# Cancel the preselection for the focused node
super + ctrl + space
  bspc node -p cancel

# Cancel the preselection for the focused desktop
super + ctrl + shift + space
  bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# Expand the tiled space in the given direction
super + alt + {Left,Down,Up,Right}
  bspc node {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

# Contract the tiled space in the given direction
super + alt + shift + {Left,Down,Up,Right}
  bspc node {@east -r -10,@north -r +10,@south -r -10,@west -r +10}

# Move a floating window
super + {Left,Down,Up,Right}
  xdo move {-x -20,-y +20,-y -20,-x +20}

# Focus
~button1
  bspc pointer -g focus

# Start move/resize
super + button{1-3}
  bspc pointer -g {move,resize_side,resize_corner}

# End move/resize
super + @button{1-3}
  bspc pointer -u
