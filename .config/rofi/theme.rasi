* {
  background-color: #272b32;
  border-color: #2e343f;
  text-color: #8ca0aa;

  spacing: 0;
  width: 512px;
}

inputbar {
  border: 0 0 1px 0;
}

prompt {
  padding: 16px;
  border: 0 1px 0 0;
}

entry {
  padding: 16px;
}

listview {
  cycle: false;
  margin: 0 0 -1px 0;
  scrollbar: false;
}

element {
  border: 0 0 1px 0;
  padding: 16px;
}

element selected {
  background-color: #2e343f;
}