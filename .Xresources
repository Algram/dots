#include "/home/raphaelg/.cache/wal/colors.Xresources"

!-------------------------------------------------------------------------------
! Xft settings
!-------------------------------------------------------------------------------

Xft.dpi:                    116
Xft.antialias:              true
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              hintslight

!-------------------------------------------------------------------------------
! URxvt settings
!-------------------------------------------------------------------------------

URxvt.depth:                256

! Padding
URxvt.internalBorder:       16

! Fonts
URxvt*font:                 xft:Roboto Mono:style=Regular:size=10.6
URxvt*boldFont:             xft:Roboto Mono:style=Medium:size=10.6

! Scrollbar
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false

URxvt.perl-ext-common: default,matcher,font-size
URxvt.font-size.step: 4
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1

URxvt.matcher.rend.0: Uline Bold fg4

URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard
URxvt.letterSpace: 0

! do not scroll with output
URxvt*scrollTtyOutput: false

! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: true

! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress: true

! disable icon insertion
URxvt*iso14755: false
URxvt*iso14755_52: false
